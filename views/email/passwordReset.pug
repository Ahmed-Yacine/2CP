        style.
            body {
                font-family: Arial, sans-serif;
                background-color: #f9f9f9;
                margin: 0;
                padding: 0;
            }
            .container {
                max-width: 600px;
                margin: 20px auto;
                background: #ffffff;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            }
            .header {
                background: #00A8A8;
                color: white;
                padding: 15px;
                text-align: center;
                font-size: 20px;
                font-weight: bold;
            }
            .content {
                padding: 20px;
            }
            .content p {
                font-size: 16px;
                color: #333;
            }
            .content ul {
                padding-left: 20px;
            }
            .content ul li {
                margin: 10px 0;
            }
            .footer {
                text-align: center;
                padding: 15px;
                font-size: 14px;
                color: #666;
            }
